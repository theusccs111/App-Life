@model APP_Life.Models.projetado
@{
    ViewBag.Title = "Objetivos";
}

<h2>Projetado</h2>

<style>
    .container {
        padding-top: 3%;
    }

    .modal-content {
        width: 600px !important;
        margin: 30px auto !important;
    }
</style>

@Html.ActionLink("Adicionar Objetivo", "CadastrarObjetivo", "Projetado", null, new { @class = "modal-link btn btn-success o" })
<div id="modal-container" class="modal fade"
     tabindex="-1" role="dialog">
    <div class="modal-content">
    </div>
</div>





<table id="tabelaObjetivos" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" cellspacing="0" style="width: 100%;">
    <thead>
        <tr>
            <th>Código</th>
            <th>Objetivo</th>
            <th>ValorAtual</th>
            <th>ValorTotal</th>
            <th>Progresso</th>
            <th>Ações</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in (ViewBag.listaObjetivo))
        {
            <tr>
                <td id="@item.ObjetivoID">
                    @item.ObjetivoID
                </td>
                <td>
                    @item.Nome
                </td>
                <td id="ValorAtual">
                   @item.ValorAtual
                </td>
                <td id="ValorTotal">
                   @item.ValorTotal
                </td>
                <td>
                    <div class="progress">
                        <div class="progress-bar" id="barrinhaLoka" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                            0%
                        </div>
                    </div>
                </td>

                <td>

                    <a href="@Url.Action("ObjetivoDelete","Projetado",new { id = @item.ObjetivoID})" class="btn btn-danger">

                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                    <button class="btn btn-primary edit" id="eita" data-id="@item.ObjetivoID"><i class="glyphicon glyphicon-edit"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>


@*

    //valor total = 100
           //valor atual = x
           // ((vA * 100 )/vT )/100


*@

<script>

    $(function () {
        var atual = parseFloat(document.getElementById('ValorAtual').innerText);

        var total = parseFloat(document.getElementById('ValorTotal').innerText);

        var porcentagem = parseFloat(((atual * 100) / total));

        document.getElementById('barrinhaLoka').innerText = String(porcentagem) + "%";

        $("#barrinhaLoka").css("width", String((porcentagem)) + "%");

        
        $("#barrinhaLoka").css("aria-valuenow", parseInt(porcentagem));

      
    });
</script>


<div class="modal" id="modalo">

    @Html.Partial("_ObjetivoUpdate", Model);

</div>


<script type="text/javascript">
    $(".edit").click(function () {
        var id = $(this).attr("data-id");
        $("#modalo").load("ObjetivoUpdate?id=" + id, function () {
            $("#modalo").modal();
        })
    });


    $(function () {
        $('body').on('click', '.o', function (e) {
            e.preventDefault();
            $(this).attr('data-target', '#modal-container');
            $(this).attr('data-toggle', 'modal');
        });

        $('body').on('click', '.modal-close-btn', function () {
            $('#modal-container').modal('hide');
        });

        $('#modal-container').on('hidden.bs.modal', function () {
            $(this).removeData('bs.modal');
        });
        $('#CancelModal').on('click', function () {
            return false;
        });
    });



</script>

