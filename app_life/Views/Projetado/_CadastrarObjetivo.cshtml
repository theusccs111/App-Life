
@model APP_Life.Models.objetivo


@{
    ViewBag.Title = "CadastrarObjetivo";
}
<div class="modal-body">

    <!-- Modal content-->
    @using (Html.BeginForm("CadastrarObjetivo", "Projetado", new { @class = "" },
                                             FormMethod.Post))
    {
        @Html.ValidationSummary(true);
        <div class="container">
            <div class="col-md-12">
                <!-- Text input-->
                <div class="form-group">
                    <div class="col-md-12">
                        <!-- <input id="textinput" name="textinput" placeholder="Descrição" class="form-control" type="text">
                        -->
                        Nome do Objetivo:
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control input-md" } })


                    </div>
                </div>
            </div>
        </div>
   

        <div class="container">
            <div class="col-md-6">
                <!-- Text input-->
                <div class="form-group">

                    <div class="col-md-12">
                        <!--    <input id="textinput" name="textinput" placeholder="placeholder" class="form-control input-md" type="text">
                           -->
                        Valor Atual:
                        @Html.EditorFor(model => model.ValorAtual, new { htmlAttributes = new { @class = "form-control input-md" } })


                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Text input-->
                <div class="form-group">

                    <div class="col-md-12">
                        <!--  <input id="textinput" name="textinput" placeholder="" class="form-control input-md" type="datetime">
                        -->
                       Valor Total:
                        @Html.EditorFor(model => model.ValorTotal, new { htmlAttributes = new { @class = "form-control input-md" } })



                    </div>
                </div>
            </div>
        </div>
        <div class="container">

            <div class="col-md-6">
                <!-- Button -->
                <div class="form-group">

                    <div class="col-md-4" style="margin-top:3px;">
                        <button type="submit" id="approve-btn"
                                class="btn btn-danger">
                            Save
                        </button>
                    </div>
                </div>
            </div>



        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
