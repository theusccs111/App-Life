
@model APP_Life.Models.objetivo


@{
    ViewBag.Title = "CadastrarObjetivo";
}

<style>
    .modal-title {
        margin-left: 20%;
        color: #06921c;
    }

    .modal-header {
        padding-bottom: 2px;
        margin-bottom: 20px;
    }

    .modal-footer {
        margin-top: 20px;
    }
</style>
<script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
</script>
<div class="modal-body">

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/method_PT.js"></script>

    <!-- Modal content-->
    @using (Html.BeginForm("CadastrarObjetivo", "Projetado", new { @class = "" },
                                                     FormMethod.Post))
    {<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Cadastrar Objetivo</h4>
    </div>

        @Html.ValidationSummary(true);

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control input-md" })
                    @Html.ValidationMessageFor(model => model.Nome
               )
                </div>
            </div>
        </div>

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.ValorAtual, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.ValorAtual, new { htmlAttributes = new { @class = "form-control input-md" } })
                    @Html.ValidationMessageFor(model => model.ValorAtual)
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.ValorTotal, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.ValorTotal, new { htmlAttributes = new { @class = "form-control input-md" } })
                    @Html.ValidationMessageFor(model => model.ValorTotal)
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input type="button" id="cancelar" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
            <input type="submit" value="Salvar" class="btn btn-success" />
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
