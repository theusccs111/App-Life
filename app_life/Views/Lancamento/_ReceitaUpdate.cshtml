


@model APP_Life.Models.receita

@{

    ViewBag.Title = "Edit";
}

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<style>
    .modal-footer {
        margin-right: 10%;
    }

    .modal-title {
        margin-left: 30%;
        color: #06921c;
    }

    .control-label {
        text-align:left;
    }
</style>

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("ReceitaUpdate", "Lancamento", new { @class = "" },
                                          FormMethod.Post))
        {
            <div class="modal-header">
                <button type="button" class="close" id="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Editar Receita</h4>
            </div>

                @Html.AntiForgeryToken()

                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)



                        <div class="form-group">
                            <div class="col-md-9">
                                @Html.HiddenFor(model => model.ReceitaID, new { @class = "form-control"/*, @readonly = "readonly"*/ })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.categoria.nome, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownList("CategoriaID", null, new { @class = "form-control" })
                            </div>
                        </div>
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.Descricao, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Descricao)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Valor, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Valor)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Data, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Data, new { @class = "form-control" , @type = "date" })
                                @Html.ValidationMessageFor(model => model.Data)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.HiddenFor(model => model.UsuarioID, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.HiddenFor(model => model.UsuarioID, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.UsuarioID)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.HiddenFor(model => model.CategoriaID, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.HiddenFor(model => model.CategoriaID, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CategoriaID)
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" id="cancelar" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>
        }
    </div><!-- /.modal-content -->
</div>


<script type="text/javascript">

    $('#cancelar').click(function () {
        $('.modal-dialog').css('display', 'none');
        $('#modalr').removeClass('out');
        $('#modalr').addClass('in');

        $('.modal-backdrop').removeClass('in');

        $('.modal-backdrop').removeClass('modal-backdrop');
    });
    $('#close').click(function () {
        $('.modal-dialog').css('display', 'none');
        $('#modalr').removeClass('out');
        $('.modal-backdrop').removeClass('in');

        $('.modal-backdrop').removeClass('modal-backdrop');
        $('#modalr').addClass('in');

    });


</script>
