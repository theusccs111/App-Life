@model IEnumerable<APP_Life.Models.despesa>
@{
    ViewBag.Title = "Despesas";
}

<h2>Despesas</h2>


<table id="tb" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" cellspacing="0" style="width: 100%;">
    <thead>
        <tr>
            <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Valor:active to sort column ascending" style="width: 171px">
            Valor
            </th>
            <th>Descrição</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categoria.nome)
                </td>
            </tr>
        }
    </tbody>
</table>

<script>



    sessionStorage.clear();
    var linha = document.getElementById('tb').rows;
    var dados = null;
    for (var i = 1 ; i < linha.length ; i++) {
        dados = linha[i].cells;
        for (var j = 0 ; j < dados.length ; j++) {
            sessionStorage.setItem('valor' + [i], dados[j  ].innerText);
			 sessionStorage.setItem('descricao' + [i], dados[j + 1].innerText);
            sessionStorage.setItem('categoria' + [i], dados[j + 2].innerText);
           break;
        }
    }


    var array = [];
    var array2 = [];
	var array3 =[];


    for (var i = 1; i < sessionStorage.length; i++) {
        if ((sessionStorage.getItem('valor' + [i]) != null) && (sessionStorage.getItem('descricao' + [i]) != null)) {
            array[i] = sessionStorage.getItem('valor' + [i]);
            array2[i] = sessionStorage.getItem('descricao' + [i]);
            array3[i] = sessionStorage.getItem('categoria' + [i]);
           }
    }


    google.charts.setOnLoadCallback(drawChart);

    google.charts.load('43', { 'packages': ['corechart'], 'language': 'pt-br' });
     function drawChart() {

        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Despesas');
        data.addColumn('number', 'Valor');


        for (var i = 1; i < array.length; i++) {

            data.addRows([
            [String(array2[i]), parseFloat(array[i])]

            ]);
        }



        var options = {
            title: 'Despesas',
            vAxis: { title: 'Visitas', format: 'currency' },
			hAxis: { title: 'dados' },
            seriesType: 'bars',
            legend: { position: 'bottom' }

        };

        var chart = new google.visualization.ComboChart(document.getElementById('chart_div'));
        chart.draw(data, options);




    }

</script>

<div class="container">


    <div class="col-md-12">
        <div id="chart_div" style="width: 100%; height:450px;">
        </div>
    </div>

</div>



<div class="form-actions text-right pal">
    <button type="submit" class="btn btn-primary" name="Salvar" value="Salvar">
        Salvar Alterações
    </button>
</div>

