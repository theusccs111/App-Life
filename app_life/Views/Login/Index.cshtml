@model APP_Life.Models.usuario

@{
    ViewBag.Title = "Login";

    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>


    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" type="text/css">
    <!-- MetisMenu CSS -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css" />

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" type="text/css">




    <script src="~/Scripts/jquery-2.2.4.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>




</head>


<body>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
    @using (Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl },
                      FormMethod.Post, new { @class = "login" }))
    {
        @Html.ValidationSummary(true);
        <div class="container">
            <div class="col-md-3">

               
                <p class="form-title"> Vamos Começar!</p>

                <div>
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @placeholder = "Usuário" ,@data_toggle = "tooltip", @title = "Informe seu Usuário ex: joao@gmail.com" } })
                    @Html.ValidationMessageFor(model => model.email)
                </div>

                <div>
                    @Html.PasswordFor(model => model.senha, new { @placeholder = "Senha",@id = "Senha", @data_toggle = "tooltip", @title = "Informe sua senha ex: senha123" })
                    @Html.ValidationMessageFor(model => model.senha)
                </div>


                <div>
                    @Html.HiddenFor(model => model.confirmarSenha, new { @placeholder = "Senha",@id="ConfirmarSenha" })
                    @Html.ValidationMessageFor(model => model.confirmarSenha)
                </div>
                <p>
                    <input type="submit" value="Login" class="btn btn-primary btn-success" />
                    <a href="#" style="height:20px;"> Esqueceu sua senha? </a>
                </p>
                <p>
                    <input type="submit" value="Cadastre-se" style="background: #337ab7" class="btn btn-primary" />
                </p>
            </div>

        </div>

        <div id="cabeçalho" class="cab" style="color:white;font:bold;">
            <p align="justify">
                Você foi redirecionado para essa página porque você está logado no facebook e sua conta não está sincronizada
                com o App Life, por favor faça login e sincronize na opção Perfil.
            </p>
            </div>
            }

            <script>
                $('#Senha').change(function () {
                    $('#ConfirmarSenha').val($('#Senha').val());
                });
            </script>

            <script src="~/Scripts/jquery.validate.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


</body>
</html>

<style>
    body{
        background-color:gray;
    }

    form{
     
        border-radius:5px;
    }
</style>