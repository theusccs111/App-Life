


@model APP_Life.Models.lista_alimentos

@{

    ViewBag.Title = "Edit";
}



<div class="modal-body">
    @using (Html.BeginForm("CadastrarItens", "Dieta", new { @class = "" },
                                                      FormMethod.Post))
    {
        <div class="modal-header">
            <button type="button" class="close" id="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Cadastrar Itens</h4>
        </div>

            @Html.AntiForgeryToken()

            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.dieta.Nome, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownList("Dieta", null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IDDieta)


                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.alimento.Nome, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownList("IDAlimento", null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IDAlimento)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Quantidade, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Quantidade, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Quantidade)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Medida, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Medida, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Medida)
                        </div>
                    </div>



                </div>
            </div>
            <div class="modal-footer">
                <input type="button" id="cancelar" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
    }
</div><!-- /.modal-content -->


<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-containerDietaCI').modal('hide');
        });
    });
</script>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
