<style>
    .modal-dialog, .modal-body, form {
        width: 100%;
        height: 100%;
    }
</style>

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("ConsultarNutrientes", "Dieta", new { @class = "" },
                                                                              FormMethod.Post))
        {
