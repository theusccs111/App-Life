                            <td>

                                @item.alimento.Proteina

                            </td>

                            <td>

                                @item.alimento.FibraAlimentar

                            </td>

                            <td>

                                @item.alimento.Sodio

                            </td>

                            <td>

                                @item.alimento.Calcio

                            </td>
                            <td>

                                @item.alimento.Ferro

                            </td>

                            <td>

                                @item.alimento.Potassio

                            </td>

                            <td>

                                @item.alimento.Zinco

                            </td>

