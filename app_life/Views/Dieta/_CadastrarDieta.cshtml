
@model APP_Life.Models.dieta


@{
    ViewBag.Title = "Cadastrar Dieta";
}

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>



<style>
    .modal-title {
        margin-left: 20%;
        color: #06921c;
    }

        .modal-header {
        padding-bottom: 2px;
        margin-bottom: 20px;
    }

    .modal-footer {
        margin-top: 20px;
    }
   
</style>

<div class="modal-body">

    <!-- Modal content-->
    @using (Html.BeginForm("CadastrarDieta", "Dieta", new { @class = "" },
                                                             FormMethod.Post))
    {
        <div class="modal-header">
            <button type="button" class="close" id="close" data-dismiss="modal">
                <span aria-hidden="true">×</span><span class="sr-only">Close</span>
            </button>
            <h4 class="modal-title">Cadastrar Dieta</h4>
        </div>
        @Html.ValidationSummary(true);

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Nome)
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <input type="button" id="cancelar" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
            <input type="submit" value="Salvar" class="btn btn-success" />
        </div>

    }
</div>
<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-containerDieta').modal('hide');
        });
    });
</script>

<script>
    // Get all elements with class="closebtn"
    var close = document.getElementsByClassName("closebtn");
    var i;

    // Loop through all close buttons
    for (i = 0; i < close.length; i++) {
        // When someone clicks on a close button
        close[i].onclick = function () {

            // Get the parent of <span class="closebtn"> (<div class="alert">)
            var div = this.parentElement;

            // Set the opacity of div to 0 (transparent)
            div.style.opacity = "0";

            // Hide the div after 600ms (the same amount of milliseconds it takes to fade out)
            setTimeout(function () { div.style.display = "none"; }, 600);
        }
    }
</script>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

