@model IEnumerable<APP_Life.Models.lista_alimentos>

@{
    ViewBag.Title = "ListarDieta";
}

<h2>ListarDieta</h2>


<style>
    .modal-footer {
        margin-right: 10%;
    }

    .modal-title {
        margin-left: 30%;
        color: #06921c;
    }

    .control-label {
        text-align: left;
    }
</style>

<div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" id="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Itens da Dieta</h4>
        </div>

        <div class="modal-body">
            <table id="tabelaReceita" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline sortable" cellspacing="0" style="width: 100%;">
                <thead style="">
                    <tr>
                        <th>Alimento</th>
                        <th>Quantidade</th>
                        <th>Medida</th>
                        <th>Dieta</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in (ViewBag.ListaAlimentos))
                    {
                        <tr>

                            <td>
                                @item.alimento.Nome
                            </td>
                            <td>
                                @item.Quantidade
                            </td>
                            <td>
                                @item.Medida
                            </td>
                            <td>
                                @item.dieta.Nome
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <input type="button" id="cancelar" value="Fechar" class="btn btn-default" data-dismiss="modal" />
        
        </div>
    </div>
</div>

<script type="text/javascript">

    $('#cancelar').click(function () {
        $('.modal-dialog').css('display', 'none');
        $('#modalr').removeClass('out');
        $('#modalr').addClass('in');

        $('.modal-backdrop').removeClass('in');

        $('.modal-backdrop').removeClass('modal-backdrop');
    });
    $('#close').click(function () {
        $('.modal-dialog').css('display', 'none');
        $('#modalr').removeClass('out');
        $('.modal-backdrop').removeClass('in');

        $('.modal-backdrop').removeClass('modal-backdrop');
        $('#modalr').addClass('in');

    });


</script>