@model IEnumerable<APP_Life.Models.dieta>

@{
    ViewBag.Title = "ConsultarNutrientesDieta";
}

<h2>ConsultarNutrientesDieta</h2>

<table id="tabelaReceita" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline sortable" cellspacing="0" style="width: 100%;">
    <thead style="">
        <tr>
            <th>Código</th>
            <th>Dietas</th>
         
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (ViewBag.listaDieta))
        {
            <tr>
                <td id="@item.DietaID">
                    @item.DietaID
                </td>
                <td>
                    @item.Nome
                </td>
                <td>

                    <button class="btn btn-primary edit eita" title="Consultar" data-id="@item.DietaID"><i class="glyphicon glyphicon-search"></i></button>


                </td>
                
            </tr>
        }
    </tbody>
</table>



<div class="modal fade" id="modalDi">

  
</div>

<script type="text/javascript">

    $(".eita").click(function () {
        var id = $(this).attr("data-id");
        $("#modalDi").load("ConsultarNutrientes?id=" + id, function () {

            $("#modalDi").modal();
        })
    });
</script>

