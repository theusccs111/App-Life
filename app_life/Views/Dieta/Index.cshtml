@model IEnumerable<APP_Life.Models.dieta>

@{
    ViewBag.Title = "Index";
}

<h2>Dietas</h2>


<style>
    .container {
        padding-top: 3%;
    }

    .modal-content {
        width: 600px !important;
        margin: 30px auto !important;
    }

    .dietaC {
        margin-left: 70%;
        margin-bottom: 50px;
    }

     .alert {
    padding: 20px;
    background-color: #f44336; /* Red */
    color: white;
    margin-bottom: 15px;
}

/* The close button */
.closebtn {
    margin-left: 15px;
    color: white;
    font-weight: bold;
    float: right;
    font-size: 22px;
    line-height: 20px;
    cursor: pointer;
    transition: 0.3s;
}

/* When moving the mouse over the close button */
.closebtn:hover {
    color: black;
}

.alert {
    opacity: 1;
    transition: opacity 0.6s; /* 600ms to fade out */
}
</style>

<a href="@Url.Action("CadastrarDieta", "Dieta")" class="modal-link btn btn-success dietaC" title="Cadastrar Dieta">

    <span class="fa fa-plus" aria-hidden="true"></span>
</a>

<br />

<div id="modal-containerDieta" class="modal fade"
     tabindex="-1" role="dialog">
    <div class="modal-content">
    </div>
</div>

<div id="modal-containerDietaCI" class="modal fade"
     tabindex="-1" role="dialog">
    <div class="modal-content">
    </div>
</div>

<table id="tabelaReceita" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline sortable" cellspacing="0" style="width: 100%;">
    <thead style="">
        <tr>
            <th></th>
            <th>Dietas</th>
          <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (ViewBag.listaDieta))
        {
            <tr>
                <td id="@item.DietaID">
                    @item.DietaID
                </td>
                <td>
                    @item.Nome
                </td>               
                <td>
                    <a href="@Url.Action("CadastrarItens", "Dieta")" class="modal-link btn btn-danger dietaCI" title="Cadastrar Itens">
                        <span class="fa fa-plus" aria-hidden="true"></span></a>
                    <button class="btn btn-primary edit eitaD" title="Listar" data-id="@item.DietaID">
                    <i class="glyphicon glyphicon-edit"></i></button>
                    <a href="@Url.Action("DeleteDieta", "Dieta", new { id = @item.DietaID })" class="btn btn-danger" title="Deletar">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    <button class="btn btn-primary edit eita" title="Editar" data-id="@item.DietaID"><i class="glyphicon glyphicon-edit"></i></button>

            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="modalDi">



</div>

<div class="modal fade" id="modalAI">



</div>

<div class="alert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    Incluído com sucesso!
</div>

<script type="text/javascript">

    $(".eita").click(function () {
        var id = $(this).attr("data-id");
        $("#modalDi").load("DietaUpdate?id=" + id, function () {

            $("#modalDi").modal();
        })
    });

    $(".eitaD").click(function () {
        var id = $(this).attr("data-id");
        $("#modalAI").load("ListarDieta?id=" + id, function () {

            $("#modalAI").modal();
        })
    });



    $(function () {
        $('body').on('click', '.dietaC', function (e) {
            e.preventDefault();
            $(this).attr('data-target', '#modal-containerDieta');
            $(this).attr('data-toggle', 'modal');
        });

        $('body').on('click', '.modal-close-btn', function () {
            $('#modal-containerDieta').modal('hide');
        });

        $('#modal-containerDieta').on('hidden.bs.modal', function () {
            $(this).removeData('bs.modal');
        });
        $('#CancelModal').on('click', function () {
            return false;
        });


        $('body').on('click', '.dietaCI', function (e) {
            e.preventDefault();
            $(this).attr('data-target', '#modal-containerDietaCI');
            $(this).attr('data-toggle', 'modal');
        });

        $('body').on('click', '.modal-close-btn', function () {
            $('#modal-containerDietaCI').modal('hide');
        });

        $('#modal-containerDietaCI').on('hidden.bs.modal', function () {
            $(this).removeData('bs.modal');
        });
        $('#CancelModal').on('click', function () {
            return false;
        });


     
    });


</script>

<script>
    // Get all elements with class="closebtn"
    var close = document.getElementsByClassName("closebtn");
    var i;

    // Loop through all close buttons
    for (i = 0; i < close.length; i++) {
        // When someone clicks on a close button
        close[i].onclick = function () {

            // Get the parent of <span class="closebtn"> (<div class="alert">)
            var div = this.parentElement;

            // Set the opacity of div to 0 (transparent)
            div.style.opacity = "0";

            // Hide the div after 600ms (the same amount of milliseconds it takes to fade out)
            setTimeout(function () { div.style.display = "none"; }, 600);
        }
    }
</script>