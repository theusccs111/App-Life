    <h2>Dietas</h2>
    <p>Controle de dietas</p>
    <p>
        <a href="@Url.Action("CadastrarDieta", "Dieta")" class="modal-link btn btn-success dietaC" title="Cadastrar Dieta">
            <span class="fa fa-plus"></span><span style="font-family: 'Open Sans', 'Helvetica Neue', Arial, sans-serif; border: none; font-weight: 700;"> Adicionar Dieta</span>
        </a>
    </p>
</div>

<div id="modal-containerDieta" class="modal fade"
     tabindex="-1" role="dialog">
    <div class="modal-content">
    </div>
</div>

<div id="modal-containerDietaCI" class="modal fade"
